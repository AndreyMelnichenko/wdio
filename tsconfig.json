{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./types"],
    "types": [
      "node",
      "chai",
      "@wdio/cucumber-framework",
      "@wdio/sync"
    ],
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "./tsrc"
  },
  "include": ["./src/**/*.ts"]
}
